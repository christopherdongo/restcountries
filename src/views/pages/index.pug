doctype
html(lang='en')
    head
        meta(charset='utf-8')
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title REST Countries
        link(rel="icon" type="image/png" href="assets/icons/favicon.png")
        link(rel="stylesheet", href="css/styles.css")
        <link rel="preconnect" href="https://fonts.gstatic.com">
        <link href="https://fonts.googleapis.com/css2?family=Nunito+Sans:wght@300;600;800&display=swap" rel="stylesheet">
        <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.6.3/css/font-awesome.min.css" rel="stylesheet"/>
        <script src="https://use.fontawesome.com/38b53dba4d.js"></script>

    body
       header.header
         nav.header__navegation
          .header__title 
             a.Where in the World?
          .switch
            .switch__image#image
               <i class="fa fa-moon-o fa-lg aria-hidden="true"></i>
            h1.switch__titlemode Dark Mode
       main.container
          section.container__search
            form.container__form#form
              input(type="text", placeholder="Search for a country...").container__input#search__input
              .container__icon
               <i class="fa fa-search"></i>
            .card.card__options.options#continents
              .card__selectbox.select-box
                .card__optionscontainer.options-container
                   .card__option.option
                     input(type="radio" class="radio" id="Africa" name="continentes" value="Africa")
                     label(for="Africa") Africa
                   .card__option.option
                     input(type="radio" class="radio" id="Americas" name="continentes" value="Americas")
                     label(for="Americas") America
                   .card__option.option
                     input(type="radio" class="radio" id="Asia" name="continentes" value="Asia")
                     label(for="Asia") Asia
                   .card__option.option
                     input(type="radio" class="radio" id="Europe" name="continentes" value="Europe")
                     label(for="Europe") Europa
                   .card__option.option
                     input(type="radio" class="radio" id="Oceania" name="continentes" value="Oceania")
                     label(for="Oceania") Oceania
                .card__select.selected Filter by Regions
                  .arrow
                   <i class="fa fa-arrow-down" aria-hidden="true"></i>
          section.container__country#container-country
            .loader#loader
            .container__country2#container-country2
           

    script(src="js/scripts-min.js")